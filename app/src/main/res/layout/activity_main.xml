<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Welcome to
Guess The Program"
        android:textAlignment="center"
        android:textColor="#1416ff"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/texttwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Enter the Range"
        android:textColor="#ffb428"
        android:textSize="25dp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editNumber1"
            android:layout_width="150dp"
            android:layout_height="85dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:hint="min"
            android:inputType="number"
            android:padding="16dp"
            android:shadowColor="#423011"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#654321"
            android:textSize="45dp" />

        <EditText
            android:id="@+id/editNumber2"
            android:layout_width="150dp"
            android:layout_height="85dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:hint="max"
            android:inputType="number"
            android:padding="16dp"
            android:shadowColor="#423011"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#654321"
            android:textSize="45dp" />


    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:background="#40ed07"
        android:onClick="goToSecond"
        android:text="Go"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Switch
            android:id="@+id/btnSwitch"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:checked="false"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:text="EXCLUDE" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="30dp"
            android:background="#fff"
            android:onClick="exitActivity"
            android:text="EXIT"
            android:textColor="#ff0907"
            android:textStyle="bold" />


    </LinearLayout>



</LinearLayout>